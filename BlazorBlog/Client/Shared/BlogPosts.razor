@page "/blogpost"
@using BlazorBlog.Shared
@inject BlazorBlog.Client.Services.IBlogService BlogService;
<h3>BlogPost</h3>

@foreach (var post in Posts)
{
    <div style="margin: 15px; padding: 10px; border: solid gray 1px">
        <div>
            <h3>
                @post.Title
            </h3>
        </div>
        <div>
            @post.Description
        </div>
        <div>
            <a href="/posts/@post.Url" >Read more...</a>
        </div>
    </div>
}





@code {
    public List<BlogPost> Posts = new List<BlogPost>();
    protected override async Task OnInitializedAsync()
    {
        Posts =  await BlogService.GetBlogPosts();
    }
}
